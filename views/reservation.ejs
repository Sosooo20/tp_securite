<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header Navigation -->
    <header class="header">
        <div class="nav-container">
            <a href="/" class="logo">
                <img src="/images/rent_a_cat.jpg" alt="Rent a Cat Logo">
            </a>
            
            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Accueil</a>
                    </li>
                    
                    <% if (typeof session !== 'undefined' && session && session.userId) { %>
                        <!-- Utilisateur connect√© -->
                        <li class="nav-item">
                            <a href="/reservations" class="nav-link">R√©servations</a>
                        </li>
                        <li class="nav-item">
                            <form method="POST" action="/logout" style="display: inline;">
                                <button type="submit" class="nav-link" style="background: none; border: none; cursor: pointer; font-size: 16px; font-weight: 500;">
                                    D√©connexion
                                </button>
                            </form>
                        </li>
                    <% } else { %>
                        <!-- Utilisateur non connect√© -->
                        <li class="nav-item">
                            <a href="/login" class="nav-link">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a href="/register" class="nav-link">Inscription</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Contenu principal -->
    <main>
        <div class="container">
            <div class="reservation-container">
                <!-- Informations du chat -->
                <div class="chat-info-section">
                    <h1>R√©server <%= chat.nom %></h1>
                    
                    <div class="chat-details">
                        <div class="chat-image">
                            <% if (chat.image) { %>
                                <img src="<%= chat.image %>" alt="<%= chat.nom %>">
                            <% } else { %>
                                <img src="/images/default-cat.jpg" alt="<%= chat.nom %>">
                            <% } %>
                        </div>
                        
                        <div class="chat-infos">
                            <h2>üê± <%= chat.nom %></h2>
                            <div class="info-grid">
                                <div class="info-item">
                                    <span class="label">Race :</span>
                                    <span class="value"><%= chat.race %></span>
                                </div>
                                <div class="info-item">
                                    <span class="label">√Çge :</span>
                                    <span class="value"><%= chat.age %> ans</span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Caract√®re :</span>
                                    <span class="value"><%= chat.caractere %></span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Jouet pr√©f√©r√© :</span>
                                    <span class="value"><%= chat.jouet_prefere %></span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Prix par jour :</span>
                                    <span class="value price"><%= chat.prix %> ‚Ç¨</span>
                                </div>
                            </div>
                            
                            <% if (chat.description) { %>
                                <div class="description">
                                    <h3>Description :</h3>
                                    <p><%= chat.description %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Section r√©servation -->
                <div class="reservation-section">
                    <h2>üìÖ S√©lectionner les dates</h2>
                    
                    <form id="reservationForm">
                        <div class="date-selection">
                            <div class="date-input-group">
                                <label for="dateDebut">Date de d√©but :</label>
                                <input type="date" id="dateDebut" name="dateDebut" min="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>
                            
                            <div class="date-input-group">
                                <label for="dateFin">Date de fin :</label>
                                <input type="date" id="dateFin" name="dateFin" min="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>

                            <!-- Boutons apr√®s les champs -->
                            <div class="buttons-section" style="margin: 30px 0; text-align: center;">
                                <div class="button-container" style="margin: 20px 0;">
                                    <button type="button" class="btn btn-info btn-prix" id="btnGenererPrix">
                                        ÔøΩ G√©n√©rer un prix
                                    </button>
                                </div>
                                
                                <div class="button-container" style="margin: 20px 0;">
                                    <button type="button" class="btn btn-secondary btn-reserve-simple" id="btnReserver">
                                        üê± R√©server <%= chat.nom %>
                                    </button>
                                </div>
                            </div>

                            <!-- Affichage du calcul de prix -->
                            <div class="price-calculation" id="priceCalculation" style="display: none; margin: 30px 0; padding: 20px; background: #f8f9fa; border-radius: 10px; border: 2px solid #17a2b8;">
                                <h3 style="color: #17a2b8; margin-bottom: 15px;">üìä Calcul du prix</h3>
                                <div style="font-size: 16px; line-height: 1.6;">
                                    <p><strong>P√©riode :</strong> <span id="periodText">-</span></p>
                                    <p><strong>Nombre de jours :</strong> <span id="nombreJoursText">0</span> jour(s)</p>
                                    <p><strong>Prix par jour :</strong> <%= chat.prix %> ‚Ç¨</p>
                                    <p style="font-size: 20px; font-weight: bold; color: #28a745; border-top: 2px solid #28a745; padding-top: 15px; margin-top: 15px;">
                                        <strong>Prix total :</strong> <span id="prixTotalText">0</span> ‚Ç¨
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script>
        console.log('Script de r√©servation charg√©');
        const prixParJour = <%= chat.prix %>;
        const chatId = <%= chat.id %>;
        const dateDebutInput = document.getElementById('dateDebut');
        const dateFinInput = document.getElementById('dateFin');
        const btnReserver = document.getElementById('btnReserver');
        const btnGenererPrix = document.getElementById('btnGenererPrix');
        const priceCalculation = document.getElementById('priceCalculation');
        const periodText = document.getElementById('periodText');
        const nombreJoursText = document.getElementById('nombreJoursText');
        const prixTotalText = document.getElementById('prixTotalText');

        console.log('Prix par jour:', prixParJour);
        console.log('√âl√©ments trouv√©s:', {
            dateDebutInput: !!dateDebutInput,
            dateFinInput: !!dateFinInput,
            btnGenererPrix: !!btnGenererPrix,
            priceCalculation: !!priceCalculation,
            periodText: !!periodText,
            nombreJoursText: !!nombreJoursText,
            prixTotalText: !!prixTotalText
        });

        // Mettre √† jour la date minimum pour la fin quand on change la date de d√©but
        dateDebutInput.addEventListener('change', function() {
            console.log('Date de d√©but chang√©e:', this.value);
            if (this.value) {
                dateFinInput.min = this.value;
                console.log('Date minimum mise √† jour pour la fin');
            }
        });

        // UNIQUE fonction pour calculer le prix
        btnGenererPrix.addEventListener('click', function() {
            console.log('=== BOUTON G√âN√âRER PRIX CLIQU√â ===');
            
            // V√©rifier que les deux dates sont s√©lectionn√©es
            if (!dateDebutInput.value || !dateFinInput.value) {
                alert('Veuillez s√©lectionner les dates de d√©but et de fin');
                console.log('Dates manquantes');
                return;
            }

            console.log('Dates s√©lectionn√©es:', {
                debut: dateDebutInput.value,
                fin: dateFinInput.value
            });

            const dateDebut = new Date(dateDebutInput.value);
            const dateFin = new Date(dateFinInput.value);

            // V√©rifier que la date de fin est apr√®s la date de d√©but
            if (dateFin <= dateDebut) {
                alert('La date de fin doit √™tre apr√®s la date de d√©but');
                console.log('Date de fin invalide');
                return;
            }

            // Calculer le nombre de jours
            const diffTime = Math.abs(dateFin - dateDebut);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            
            // Calculer le prix total
            const prixTotal = diffDays * prixParJour;

            console.log('Calculs:', {
                diffTime: diffTime,
                diffDays: diffDays,
                prixParJour: prixParJour,
                prixTotal: prixTotal
            });

            // Mettre √† jour l'affichage
            console.log('Mise √† jour des √©l√©ments...');
            periodText.textContent = `Du ${dateDebut.toLocaleDateString('fr-FR')} au ${dateFin.toLocaleDateString('fr-FR')}`;
            nombreJoursText.textContent = diffDays;
            prixTotalText.textContent = prixTotal;

            // Afficher la section de calcul
            priceCalculation.style.display = 'block';
            priceCalculation.style.visibility = 'visible';

            console.log('=== CALCUL TERMIN√â ===');
            console.log('Section affich√©e, prix total:', prixTotal);
        });

        // Bouton r√©server (pour plus tard)
        btnReserver.addEventListener('click', function() {
            console.log('Bouton R√©server cliqu√©');
            alert('Fonctionnalit√© de r√©servation √† venir');
        });
    </script>
</body>
</html>